#!/bin/sh

if [ $# -ne 1 ] ; then
	echo "usage: $0 version"
	exit 1;
fi

NAME=mypdos$1

mkdir tmp/"${NAME}"
rm -f dist/${NAME}.zip
cp -a README.txt LICENSE MYPDOS.COM mypdos.atr mypdoshs.atr myinit.atr tmp/"${NAME}"
mkdir tmp/"${NAME}"/src
cp -a Makefile *.inc *.src tmp/"${NAME}"/src
cd tmp
zip -r ../dist/${NAME}.zip ${NAME}
rm -rf "${NAME}"
