#!/bin/sh

VER=`date '+%y%m%d'`

if [ $# -ge 1 ] ; then
	VER=$1
fi

NAME=mypdcart-$VER
TMPDIR=dist/tmp/"${NAME}"

mkdir -p "${TMPDIR}/src/cartsio"
mkdir -p "${TMPDIR}/src/libflash"

cp -a \
	atr2cart.exe \
	diskcart.atr \
	diskcart.com \
	diskchi.com \
"${TMPDIR}"

cp -a Makefile *.inc *.src *.cpp *.c *.h "${TMPDIR}/src"
cp -a cartsio/*.src cartsio/*.inc "${TMPDIR}/src/cartsio"
cp -a libflash/*.src libflash/*.inc "${TMPDIR}/src/libflash"

rm -f "dist/${NAME}".zip
cd dist/tmp
zip -r "../${NAME}.zip" ${NAME}
cd ..
rm -rf tmp
