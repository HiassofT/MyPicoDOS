	* = RREADST

	.LOCAL

ENDX	RTS
NE459	JMP $E459

XREG	.BYTE 0   ; XREG
YREG	.BYTE 0   ; YREG
SECMASK	.BYTE 0   ; SECMASK
SECBYTE	.BYTE 0   ; SECBYTE

INADJ	JMP (738) ; INADJ
RUADJ	JMP (736) ; RUADJ

GETBYT	CPX BYTES
	BNE ?NRR
	JSR RREAD
?NRR	LDA BUF,X
	INX
	RTS

RREAD	STY YREG
	LDY SECBYTE
	LDA BUF,Y
	AND SECMASK
	STA DSEC+1
	LDA BUF+1,Y
	STA DSEC
	ORA DSEC+1
	BEQ ?EOF
?RAGAIN	LDA #$40
	STA $303

	JSR NE459
	BMI ?RAGAIN

	LDY SECBYTE
	LDA BUF+2,Y
	STA BYTES
	BEQ RREAD
	LDX #0
	LDY YREG
	RTS

?EOF	PLA
	PLA

; start program

	JSR INADJ
	JSR RUADJ
	JMP (10)

RREND	= *
